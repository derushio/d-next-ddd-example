{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.pnp",
      "!**/.pnp.*",
      "!**/.yarn/**",
      "!**/coverage/**",
      "!**/.next/**",
      "!**/out/**",
      "!**/build/**",
      "!**/.DS_Store",
      "!**/*.pem",
      "!**/npm-debug.log*",
      "!**/yarn-debug.log*",
      "!**/yarn-error.log*",
      "!**/.env",
      "!**/.vercel",
      "!**/*.tsbuildinfo",
      "!**/next-env.d.ts",
      "!**/src/layers/infrastructure/persistence/prisma/generated/**",
      "!**/pnpm-lock.yaml"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn",
        "noVoidTypeReturn": "warn"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noReactSpecificProps": "off",
        "noArrayIndexKey": "warn",
        "useIterableCallbackReturn": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useKeyWithClickEvents": "warn",
        "noLabelWithoutControl": "warn",
        "useButtonType": "warn",
        "noAriaUnsupportedElements": "warn",
        "noNoninteractiveElementToInteractiveRole": "warn",
        "useSemanticElements": "warn",
        "noInteractiveElementToNoninteractiveRole": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "noStaticElementInteractions": "warn"
      },
      "complexity": {
        "noImportantStyles": "warn"
      },
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "patterns": [
              {
                "group": ["../*", "./*"],
                "message": "相対参照は禁止です。@/* のalias参照を使用してください。"
              }
            ]
          }
        }
      },
      "nursery": {}
    }
  },
  "overrides": [
    {
      "includes": ["src/layers/domain/**/*.ts", "src/layers/domain/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../*", "./*"],
                    "message": "相対参照は禁止です。@/* のalias参照を使用してください。"
                  },
                  {
                    "group": [
                      "@/layers/application/*",
                      "@/layers/application/**"
                    ],
                    "message": "Domain層からApplication層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  },
                  {
                    "group": [
                      "@/layers/infrastructure/*",
                      "@/layers/infrastructure/**"
                    ],
                    "message": "Domain層からInfrastructure層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  },
                  {
                    "group": [
                      "@/layers/presentation/*",
                      "@/layers/presentation/**"
                    ],
                    "message": "Domain層からPresentation層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "src/layers/application/**/*.ts",
        "src/layers/application/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../*", "./*"],
                    "message": "相対参照は禁止です。@/* のalias参照を使用してください。"
                  },
                  {
                    "group": [
                      "@/layers/infrastructure/*",
                      "@/layers/infrastructure/**"
                    ],
                    "message": "Application層からInfrastructure層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  },
                  {
                    "group": [
                      "@/layers/presentation/*",
                      "@/layers/presentation/**"
                    ],
                    "message": "Application層からPresentation層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "src/layers/infrastructure/**/*.ts",
        "src/layers/infrastructure/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../*", "./*"],
                    "message": "相対参照は禁止です。@/* のalias参照を使用してください。"
                  },
                  {
                    "group": [
                      "@/layers/presentation/*",
                      "@/layers/presentation/**"
                    ],
                    "message": "Infrastructure層からPresentation層へのインポートは禁止です。Clean Architectureの依存関係に違反しています。"
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["tests/**/*.ts", "tests/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["*.d.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
