{
  "name": "d-next-resources",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm stop-dev && pnpm run-p next:dev db:generate:watch db:studio",
    "stop-dev": "./scripts/stop-dev.sh",
    "build": "pnpm run-s db:generate next:build",
    "start": "pnpm next:start",
    "check": "pnpm run-s format type-check lint test:unit",
    "lint": "biome lint src tests",
    "lint:fix": "biome lint --write src tests",
    "format": "pnpm run-p format:biome format:markdown",
    "format:biome": "biome format --write src tests package.json biome.json",
    "format:check": "biome format src tests package.json biome.json",
    "format:markdown": "pnpm markdownlint --fix '**/*.md'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist coverage",
    "test": "pnpm run-s test:unit test:e2e",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cross-env CI=true playwright test --workers=4",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:trace": "playwright test --trace on",
    "test:e2e:headed": "playwright test --headed",
    "next:dev": "next dev --turbopack",
    "next:build": "next build",
    "next:build:turbo": "next build --turbopack",
    "next:start": "next start",
    "db:generate": "pnpm prisma generate --sql",
    "db:generate:watch": "pnpm prisma generate --sql --watch",
    "db:format": "pnpm prisma format",
    "db:push": "pnpm prisma db push",
    "db:migrate:dev": "pnpm prisma migrate dev",
    "db:migrate:deploy": "pnpm prisma migrate deploy",
    "db:seed": "pnpm prisma db seed",
    "db:studio": "pnpm prisma studio --browser none",
    "hash:generate": "pnpm dotenvx run -- pnpm tsx ./src/tools/generateHash.ts",
    "ui:add": "npx shadcn@latest add",
    "ui:update": "npx shadcn@latest diff",
    "ui:list": "npx shadcn@latest list",
    "gen": "hygen",
    "gen:usecase": "hygen usecase new",
    "gen:entity": "hygen entity new",
    "gen:vo": "hygen value-object new",
    "gen:repo": "hygen repository new",
    "gen:action": "hygen server-action new"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@paralleldrive/cuid2": "^3.0.6",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/client-runtime-utils": "^7.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jose": "^6.1.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "p-queue": "^9.1.0",
    "parse-duration": "^2.1.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.70.0",
    "react-icons": "^5.5.0",
    "react-responsive": "^10.0.1",
    "reflect-metadata": "^0.2.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "touch": "^3.1.1",
    "tsyringe": "^4.10.0",
    "usehooks-ts": "^3.1.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.5",
    "zod-form-data": "^3.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@dotenvx/dotenvx": "^1.51.4",
    "@onozaty/prisma-db-comments-generator": "^1.4.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/touch": "^3.1.5",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "hygen": "^6.2.11",
    "jsdom": "^27.4.0",
    "markdownlint-cli": "^0.47.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^7.2.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0"
  },
  "prisma": {
    "seed": "pnpm tsx ./src/layers/infrastructure/persistence/prisma/seeds/seedTestUser.ts"
  },
  "pnpm": {
    "overrides": {
      "vite": ">=6.4.1"
    }
  }
}
